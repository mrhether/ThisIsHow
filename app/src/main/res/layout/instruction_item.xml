<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@color/colorAccent"/>

    <Space
        android:layout_width="@dimen/default_margin"
        android:layout_height="@dimen/content_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/content_divider"
            tools:text="Stain the wood"/>

        <TextView
            android:id="@+id/description"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="After you have sawed out all the pieces drill the holes at each position where you will set screws. Do not forget to drill a hole for the wire on any sidewise pieces. Now screw all the wooden pieces together to a box. All the inner joints of the assembled box have to be sealed with silicone so that water cannot escape."/>

    </LinearLayout>
</LinearLayout>
